<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_height_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <ImageView
        android:id="@+id/whats_new_image_info"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_image_height_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whats_new_superpowers" />

    <TextView
        android:id="@+id/whats_new_text_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24.0dip"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:lineSpacingExtra="10.0sp"
        android:textColor="@color/black"
        android:textSize="24.0sp"
        android:textStyle="normal"
        android:text="体验强大的邮件功能"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whats_new_image_info" />

    <TextView
        android:id="@+id/whats_new_text_description"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6.0dip"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="10.0sp"
        android:textColor="@color/black"
        android:textSize="18.0sp"
        android:textStyle="normal"
        android:text="放飞您的收件箱，创新的邮件工具让您回归舒适。"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whats_new_text_title" />
</androidx.constraintlayout.widget.ConstraintLayout>