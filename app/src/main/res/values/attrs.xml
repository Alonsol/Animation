<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 飘星自定义属性 -->
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>


    <declare-styleable name="StrokeTextView">
        <!--描边的颜色 -->
        <attr name="stroke_color" format="color" />
        <!-- 描边的宽度 -->
        <attr name="stroke_width" format="dimension" />
    </declare-styleable>


    <declare-styleable name="AnimationView">
        <attr name="a_in" format="float"/>
        <attr name="a_out" format="float"/>
        <attr name="x_in" format="float"/>
        <attr name="x_out" format="float"/>
        <attr name="y_in" format="float"/>
        <attr name="y_out" format="float"/>
    </declare-styleable>

    <declare-styleable name="SplashView">
        <attr name="splash" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TriangleView">
        <!--模式-->
        <attr name="tlv_mode">
            <!--倒三角-->
            <enum name="inverted" value="0" />
            <!--正三角-->
            <enum name="regular" value="1" />
        </attr>
        <!--填充颜色-->
        <attr name="tlv_fill_color" format="color|reference" />
        <!--描边颜色-->
        <attr name="tlv_stroke_color" format="color|reference" />
    </declare-styleable>


    <declare-styleable name="AnimLogoView">
        <attr name="logoName" format="string" />
        <attr name="autoPlay" format="boolean" />
        <attr name="offsetAnimDuration" format="integer" />
        <attr name="gradientAnimDuration" format="integer" />
        <attr name="gradientColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="verticalOffset" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="showGradient" format="boolean" />
    </declare-styleable>

</resources>