<resources>

    <!-- Base application theme. -->

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="AppTheme.NoActionBar" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashActivityTheme" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="txt_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="item_txt_middle" parent="@style/txt_base">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="fido" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TKToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="navigationIcon">@drawable/ic_svg_back_white_24</item>
        <item name="titleTextAppearance">@style/TKToolbarTitleAppearance</item>
    </style>
    <style name="TKToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
